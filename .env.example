# Production Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=false

# =============================================================================
# APPLICATION SETTINGS  
# =============================================================================
PROJECT_NAME="DonorCom API"
PROJECT_DESCRIPTION="Blood Bank Management System"
VERSION=1.0.0
API_PREFIX=/api

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a new secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME
ALGORITHM=HS256

# Token expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL=true

# Account security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
FAILED_LOGIN_WINDOW_MINUTES=15

# Session management
SESSION_TIMEOUT_MINUTES=60
MAX_SESSIONS_PER_USER=5
SESSION_CLEANUP_INTERVAL_HOURS=1

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# Default SQLite (development)
DATABASE_URL=sqlite+aiosqlite:///./db.sqlite3

# Production PostgreSQL (replace with your own values)
PROD_DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@HOST:5432/DBNAME

# Pool settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_POOL_PRE_PING=true
DATABASE_ECHO=false

# =============================================================================
# CORS AND SECURITY HEADERS
# =============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","https://yourdomain.com","https://www.yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=600

SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=100
LOGIN_RATE_LIMIT_PER_MINUTE=5

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
HOST_EMAIL=your-email@example.com
HOST_PASSWORD=CHANGE_ME
EMAIL_FROM_NAME="DonorCom System"
EMAIL_RATE_LIMIT_PER_HOUR=100

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
SYS_ADMIN=admin@yourdomain.com
SYS_ADMIN_PASS=CHANGE_ME
ADMIN_PATH=/admin
ADMIN_IP_WHITELIST=203.0.113.1,203.0.113.2

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_MAX_SIZE=104857600
LOG_FILE_BACKUP_COUNT=5
SECURITY_LOG_ENABLED=true

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# =============================================================================
# REQUEST LIMITS
# =============================================================================
MAX_REQUEST_SIZE_MB=10
REQUEST_TIMEOUT_SECONDS=30
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Redis for caching and sessions
# REDIS_URL=redis://localhost:6379/0

# Celery for background tasks
# CELERY_BROKER_URL=redis://localhost:6379/1

# =============================================================================
# MIGRATION AND MAINTENANCE
# =============================================================================
FORCE_ARGON2_MIGRATION=false
MIGRATION_COMPLETE=false
MAINTENANCE_MODE=false

# =============================================================================
# DEVELOPMENT OVERRIDES (Remove in production)
# =============================================================================
DOCS_URL=/docs
REDOC_URL=/redoc