# Application Environment
ENVIRONMENT=production
DEBUG=false

# Security - Generate strong secrets
SECRET_KEY=your-256-bit-secret-key-here
ALGORITHM=HS256
JWT_ISSUER=donorcom-api
JWT_AUDIENCE=donorcom-clients

# Token Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
EMAIL_VERIFICATION_EXPIRE_HOURS=24
PASSWORD_RESET_EXPIRE_HOURS=1

# Database - Use connection pooling
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname?sslmode=require&pool_size=20&max_overflow=0

# Email Security
HOST_EMAIL=noreply@yourdomain.com
HOST_PASSWORD=app-specific-password
SMTP_TLS=true
SMTP_PORT=587
SMTP_SERVER=smtp.gmail.com

# Security Headers
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
ENABLE_REGISTRATION=false
MAINTENANCE_MODE=false